<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.casproject.PerfilActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:civ_border_color="#d9d9d9"
            app:civ_border_width="5dp" />

        <TextView
            android:id="@+id/nomePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_foto"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="nomePerfil"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nomePerfil"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="emailPerfil" />

        <TextView
            android:id="@+id/telefonePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/emailPerfil"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="telefonePerfil" />


    </RelativeLayout>
</android.support.v7.widget.CardView>